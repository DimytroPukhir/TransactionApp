@model IEnumerable<TransactionApp.Models.TransactionViewModel>

@{
    ViewBag.Title = "View";
}

<h2>Filtered Transactions</h2>

@if (Model != null)
{
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.PublicId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

            </tr>
        }

    </table>
}
@Html.ActionLink("Back", "Index", "Transactions", new {@class = "btn btn-default"})